// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tea {
  id          Int      @id @default(autoincrement())
  
  // English (Default) Fields
  name        String
  brand       String?
  description String?
  ingredients String   // Stored as text (markdown or list)
  steps       String   // Stored as text (markdown)
  
  // Chinese Fields
  nameZh        String?
  brandZh       String?
  descriptionZh String?
  ingredientsZh String?
  stepsZh       String?

  referenceImage String?
  isMade      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reviews     Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  teaId     Int
  tea       Tea      @relation(fields: [teaId], references: [id])
  rating    Int
  comment   String?
  photoUrl  String?
  createdAt DateTime @default(now())
}
